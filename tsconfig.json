{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
